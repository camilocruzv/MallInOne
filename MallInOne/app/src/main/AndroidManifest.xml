<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.carlosmario.mallinone_app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LocalsActivity"
            android:label="@string/app_name"/>
        <activity
            android:name=".ProductsActivity"
            android:label="@string/app_name"/>
        <activity
            android:name=".MapLocalActivity"
            android:label="@string/app_name"/>
        <activity
            android:name=".SearchLocalActivity"
            android:label="@string/app_name"/>
        <activity
            android:name=".LocalInfoActivity"
            android:label="@string/title_activity_local_info"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".SearchProductActivity" />
        <activity
            android:name=".ProductInfoActivity"
            android:label="@string/title_activity_product_info"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>